#!/usr/bin/env python3

"""Module for bird watching."""

from dataclasses import dataclass


@dataclass
class Bird:
    name: str
    age: int

    def celebrate_birthday(self):
        print("ðŸŽ‰")
        self.age += 1

    @classmethod
    def from_egg(egg):
        """Create a bird from an egg."""
        pass


def register_bird(bird: Bird, db) -> None:
    assert bird.age >= 0, "Programming error"
    with db.tx() as tx:
        tx.insert(bird)
